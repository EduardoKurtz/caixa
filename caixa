#include <stdio.h>
#include <string.h>

int main(void)
{
	char texto[50];
	int tam;
	int i,d;
	
	scanf("%s",texto);
	
	tam=strlen(texto);
	i=0;
	
	while (i < tam+4){
	printf("*");
	i=i+1;	
	}
	
	printf("\n");
	printf("**%s**\n",texto);
	d=0;
	
	while (d < tam+4){
	printf("*");
	d=d+1;	
	}
	printf("\n");
		
	return 0;
}
